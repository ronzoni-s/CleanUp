@namespace CleanUp.Client.Shared.Components
<MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-2">@Title</MudText>
@if (string.IsNullOrEmpty(AdditionalInformation))
{
    <MudText Color="Color.Surface" Class="mb-4">@Description</MudText>
}
else
{
    <MudText Color="Color.Surface" Class="mb-1">@Description</MudText>
    <MudText Color="Color.Surface" Class="mb-4">@AdditionalInformation</MudText>
}

@code
{
    [Parameter] public string Title { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public string AdditionalInformation { get; set; }
}