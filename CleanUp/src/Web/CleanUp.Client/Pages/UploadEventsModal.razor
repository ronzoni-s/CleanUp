
<EditForm Model="model" OnValidSubmit="SubmitAsync">
    <MudDialog>
        <TitleContent>
            @{
                <MudText Typo="Typo.h6">
                    <MudIcon Icon="@Icons.Material.Filled.VerifiedUser" Class="mr-3 mb-n1" />
                    Carica eventi
                </MudText>
            }
        </TitleContent>
        <DialogContent>
            <InputFile OnChange="@OnInputFileChange" />
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">Annulla</MudButton>
            @{
                <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">Carica</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>